<%- include('../partials/header') %>

<section id="show-page">
  <div>Surf Spot: </div>
  <div><%= surfSpot.name %></div>
  <div>location: </div>
  <div><%= surfSpot.location %></div>
</section>

<br><br><h2>Session Reviews</h2>
<form id="add-review-form" method="POST"
  action="/surfSpots/<%= surfSpot._id %>/reviews">
  <label>Review:</label>
  <input name="content"></input>
  <input name="swell"></input>
  <input name="wind"></input>
  <input type="submit" value="Add Review">
</form>

<!-- I dont understand whats bellow -->

<% if (surfSpot.reviews.length) { %>
  <table>
    <thead>
      <tr>
      	 <th>Date</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
      <% surfSpot.reviews.forEach(function(r) { %>
        <tr>
          <td><%= r.content %></td>
          <td><%= r.swell %></td>
          <td><%= r.wind %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>


<%- include('../partials/footer') %>